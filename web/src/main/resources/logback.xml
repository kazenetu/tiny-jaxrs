<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>
  <insertFromJNDI env-entry-name="java:comp/env/TEST" as="TEST_VALUE" />
  <property name="test" value="${TEST_VALUE:-none}" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %logger %message ${test} %n</pattern>
    </encoder>
  </appender>
  <root>
    <appender-ref ref="STDOUT" />
  </root>

